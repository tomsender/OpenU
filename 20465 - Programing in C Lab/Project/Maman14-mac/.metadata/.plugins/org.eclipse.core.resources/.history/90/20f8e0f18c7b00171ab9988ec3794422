void print_structs(bodyArray array){

	printf("label\tinstruction\toperation\tpoer1\t\oper2\toper3\toper4\t\n");

	printf("%s\t%s\t%s\t%s\t%s\t%s\t%s\t\n",array->label,array->instruction,array->operantion,array->openrand1,array->operand2,array->operand3,array->operand4);
}

